generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  username    String        @unique
  password    String
  email       String        @unique
  budget      Int?
  created_at  DateTime      @default(now())
  updated_at  DateTime      @default(now())
  role        String?
  transaction Transaction[]
  product     Products[]

  @@map("user")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  user_id   Int
  amount    Decimal  @db.Decimal(10, 2)
  userId    Int?
  timestamp DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])

  @@map("transaction")
}

model Products {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Decimal
  stock       Int
  image       String?
  userId      Int?
  created_at  DateTime @default(now())
  updated_at DateTime? 

  User User? @relation(fields: [userId], references: [id])

  @@map("Products")
}
